{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "permissions": {
    "allow": [
      "Bash(uv:*)",
      "Bash(ls:*)",
      "Bash(python -m pytest:*)",
      "Bash(uv sync:*)",
      "Bash(uv run python:*)",
      "Bash(uv run pytest:*)",
      "Bash(uv pip install:*)",
      "Bash(git checkout:*)",
      "Bash(git clean:*)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./config/credentials.json)",
      "Read(./private/**)",
      "Read(**/*.pem)",
      "Read(**/*.key)"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)"
    ]
  },
  "outputStyle": "Explanatory",
  "spinnerTipsEnabled": false,
  "model": "opusplan",
  "language": "Japanese",
  "teammateMode": "tmux",
  "defaultMode": "plan"
}
